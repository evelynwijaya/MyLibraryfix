<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.mylibrary2.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            android:text="No.Anggota : "/>

        <TextView
            android:id="@+id/tv_noanggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_namaanggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16px"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_emailanggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginBottom="16px"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16px"
        android:text="Pinjaman :"
        android:textStyle="bold"
        android:textSize="16sp"
        />
<LinearLayout
    android:id="@+id/vgDataPinjam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px"
        android:layout_marginBottom="8px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16px"
        android:layout_marginLeft="16px"
        android:layout_marginBottom="8px"/>

    <TextView
        android:id="@+id/tv_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16px"
        android:layout_marginLeft="16px"
        android:layout_marginBottom="16px"/>

    <TextView
        android:id="@+id/tv_tahun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16px"
        android:layout_marginLeft="16px"
        android:layout_marginBottom="16px"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal pinjam"/>

        <TextView
            android:id="@+id/tv_tglpinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="16px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal kembali"/>

        <TextView
            android:id="@+id/tv_tglkembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginRight="16px"
            />
    </LinearLayout>
</LinearLayout>

    <TextView
        android:id="@+id/tv_tidakpinjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak Ada Pinjaman"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>
